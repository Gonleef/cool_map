{% extends "base.jinja2" %}
{% set page = 'forms' %}

{% block base_main %}

        <div class="row">
            {% for form in forms %}
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <div class="card-body">
                        <h5 class="card-title">{{ form.title }}</h5>
                        <p class="card-text">{{ form.description }}</p>
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="location.href='/admin/form/{{ form.id }}'">
                            Редактировать</button>
                        <button type="button" class="btn btn-sm btn-outline-danger">Удалить</button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

{% endblock %}
