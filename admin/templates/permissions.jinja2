{% extends "base.jinja2" %}

{% block base_main %}
    <table class="table table-hover table-sm">
        <caption><hr>Skip: {{ permissions.skip }} Take: {{ permissions.skip }} Count: {{ permissions.count }}</caption>
        <thead class="thead-dark">
            <tr>
                <th scope="col">Объект</th>
                <th scope="col">Разрешения</th>
            </tr>
        </thead>
        <tbody>
        {% for permission in permissions.items %}
            <tr>
                <td>{{ permission.object }}</td>
                <td>{{ permission.value.__str__()[12:].replace('|', ', ') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
